<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:rowCount="20"
    android:columnCount="10">

    <Space
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_row="0"
        android:layout_column="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_row="1"
        android:layout_column="2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:id="@+id/studyCard_createTime"
            android:textColor="#ff6db5ff"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모 임 위 치"
            android:id="@+id/studyCard_location"
            android:textColor="#ff9b98a1"/>


        <Space
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만든이"
            android:id="@+id/studyCard_creator"
            android:textColor="#ff9b98a1"/>


    </LinearLayout>


    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="제목 테스트"
        android:id="@+id/studyCard_title"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="23dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="내용 테스트"
        android:id="@+id/studyCard_detail"
        android:layout_row="3"
        android:layout_column="2"
        android:textColor="#ff9b98a1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        android:layout_row="4"
        android:layout_column="2"
        android:textColor="#ff9b98a1" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_row="5"
        android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n명"
            android:id="@+id/studyCard_memberCount"
            android:textColor="#ff9b98a1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="#ff9b98a1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n명"
            android:id="@+id/studyCard_maxMember"
            android:textColor="#ff9b98a1" />

        <Space
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모 임 날 짜"
            android:id="@+id/studyCard_week"
            android:textColor="#ff9b98a1" />


    </LinearLayout>


    <Space
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_row="5"
        android:layout_column="4" />



</GridLayout>
