<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.godong.westudy.Activity.JoinActivity">

    <TextView
        android:text="회원가입"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/join_textView"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email*"
                android:id="@+id/join_TextView_email"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_email" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/join_edit_email"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="비밀번호*"
                android:id="@+id/join_TextView_pw"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/pwTextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/join_edit_pw"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="비밀번호 확인*"
                android:id="@+id/join_TextView_pwConfirm"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_pwConfirm" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/join_edit_pwConfirm"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="이름*"
                android:id="@+id/join_TextView_name"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_edit_name"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="성별"
                android:id="@+id/genderTextView"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_gender" />

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radio_join_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="남"
                    android:id="@+id/join_radio_gender_male"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:tag="1"/>
                <RadioButton
                    android:text="여"
                    android:id="@+id/join_radio_gender_female"
                    android:layout_width="80dp"
                    android:layout_height="20dp" />
                </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="관심주제"
                android:id="@+id/interestTextView"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_intrest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:text="어학"
                    android:id="@+id/join_btn_interest1"
                    android:layout_width="70dp"
                    android:layout_height="50dp" />
                <Button
                    android:text="취업"
                    android:id="@+id/join_btn_interest2"
                    android:layout_width="70dp"
                    android:layout_height="50dp" />
                <Button
                    android:text="IT"
                    android:id="@+id/join_btn_interest3"
                    android:layout_width="70dp"
                    android:layout_height="50dp" />
                <Button
                    android:text="자격증,시험"
                    android:id="@+id/join_btn_interest4"
                    android:layout_width="120dp"
                    android:layout_height="50dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="자기 소개"
                android:id="@+id/introduceTextView"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_introduce" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/join_edit_introduce"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:layout_width="300px"
            android:layout_height="100px"
            android:text="가입하기"
            android:id="@+id/join_btn_join"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
