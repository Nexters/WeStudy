<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.godong.westudy.Activity.JoinActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="#FFFFFF" >

        <TextView
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#383432"
            android:textSize="15dp"
            android:id="@+id/join_textView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="#f4f6f6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_01"
                />
            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="이메일*"
                android:textSize="16dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/join_edit_email"
                android:background="@drawable/common_n_07"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_02"
                />
            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="비밀번호*"
                android:textSize="16dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_pw" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/join_edit_pw"
                android:background="@drawable/common_n_07"
                android:layout_weight="1" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_03"
                />
            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="이름*"
                android:textSize="16dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_name" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/join_edit_name"
                android:background="@drawable/common_n_07"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_04"
                />
            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="성별"
                android:textSize="16dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_gender" />

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radio_join_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >
                <RadioButton
                    android:id="@+id/join_radio_gender_male"
                    android:text="남"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/common_n_08"
                    android:button="@null"
                    android:tag="1"/>
                <RadioButton
                    android:id="@+id/join_radio_gender_female"
                    android:text="여"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/common_n_08"
                    android:button="@null"
                    android:tag="2"/>
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_05"
                />
            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="관심주제"
                android:textSize="16dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_intrest" />

        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/join_btn_interest0"
                android:text="어학"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/common_n_08"/>

            <Button
                android:id="@+id/join_btn_interest1"
                android:text="취업"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/common_n_08"/>
            <Button
                android:id="@+id/join_btn_interest2"
                android:text="자격증,시험"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="106dp"
                android:layout_height="30dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/common_n_08"/>
            <Button
                android:id="@+id/join_btn_interest3"
                android:text="IT"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/common_n_08"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_06"
                />
            <TextView
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="자기소개"
                android:textSize="16dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_introduce" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:id="@+id/join_edit_introduce"
            android:background="@drawable/common_n_07" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="가입하기"
            android:textSize="16dp"
            android:textColor="#000000"
            android:id="@+id/join_btn_join"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_n_09"/>

    </LinearLayout>

</LinearLayout>
