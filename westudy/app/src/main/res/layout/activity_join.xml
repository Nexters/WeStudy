<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.godong.westudy.Activity.JoinActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="#FFFFFF" >

        <TextView
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#383432"
            android:textSize="15dp"
            android:id="@+id/join_textView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="#f4f6f6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/signup_icon_01"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="E-mail*"
                android:textSize="18dp"
                android:textColor="#335585"
                android:gravity="center_vertical"
                android:id="@+id/join_TextView_email"
                android:layout_alignEnd="@+id/join_TextView_email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/join_edit_email"
                android:background="@drawable/common_n_07"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="비밀번호*"
                android:id="@+id/join_TextView_pw"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/pwTextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/join_edit_pw"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="이름*"
                android:id="@+id/join_TextView_name"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_edit_name"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="성별"
                android:id="@+id/genderTextView"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_gender" />

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radio_join_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="남"
                    android:id="@+id/join_radio_gender_male"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:tag="1"/>
                <RadioButton
                    android:text="여"
                    android:id="@+id/join_radio_gender_female"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:tag="2"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="관심주제"
                android:id="@+id/interestTextView"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_intrest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:text="어학"
                    android:id="@+id/join_btn_interest1"
                    android:layout_width="70dp"
                    android:layout_height="50dp" />
                <Button
                    android:text="취업"
                    android:id="@+id/join_btn_interest2"
                    android:layout_width="70dp"
                    android:layout_height="50dp" />
                <Button
                    android:text="IT"
                    android:id="@+id/join_btn_interest3"
                    android:layout_width="70dp"
                    android:layout_height="50dp" />
                <Button
                    android:text="자격증,시험"
                    android:id="@+id/join_btn_interest4"
                    android:layout_width="120dp"
                    android:layout_height="50dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="자기 소개"
                android:id="@+id/introduceTextView"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/join_TextView_introduce" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/join_edit_introduce"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:layout_width="300px"
            android:layout_height="100px"
            android:text="가입하기"
            android:id="@+id/join_btn_join"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>
