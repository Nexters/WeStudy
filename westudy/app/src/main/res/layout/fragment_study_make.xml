<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="15">

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| 스터디 만들기"
        android:layout_row="1"
        android:layout_column="1"
        android:textAlignment="center"
        android:textSize="30dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="1">

        <Space
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="주 제 : "
            android:layout_row="1"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/studyMake_radio_subject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0">
            <RadioButton
                android:text="어학"
                android:id="@+id/studyMake_radio_subject1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:tag="1"/>
            <RadioButton
                android:text="취업"
                android:id="@+id/studyMake_radio_subject2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:tag="2"/>
            <RadioButton
                android:text="자격증,시험"
                android:id="@+id/studyMake_radio_subject3"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:tag="3"/>
            <RadioButton
                android:text="IT"
                android:id="@+id/studyMake_radio_subject4"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:tag="4"/>
            <RadioButton
                android:text="기타"
                android:id="@+id/studyMake_radio_subject5"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:tag="5"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="스터디 이름 : "
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/studyMake_edit_name"
            android:layout_row="4"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="인 원 : "
            android:layout_row="5"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/studyMake_radio_person"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="6"
            android:layout_column="0">
            <RadioButton
                android:text="4명"
                android:id="@+id/studyMake_radio_person4"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:tag="4"/>
            <RadioButton
                android:text="6명"
                android:id="@+id/studyMake_radio_person6"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:tag="6"/>
            <RadioButton
                android:text="8명"
                android:id="@+id/studyMake_radio_person8"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:tag="8"/>
            <RadioButton
                android:text="9명 이상"
                android:id="@+id/studyMake_radio_person9"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:tag="9"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="지 역 : "
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:inputType="textMultiLine"
            android:id="@+id/studyMake_edit_location"
            android:layout_row="8"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="모 임 일 : "
            android:layout_row="9"
            android:layout_column="0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_row="10"
            android:layout_column="0">
            <Button
                android:text="월"
                android:id="@+id/studyMake_btn_mon"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <Button
                android:text="화"
                android:id="@+id/studyMake_btn_tue"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <Button
                android:text="수"
                android:id="@+id/studyMake_btn_wed"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <Button
                android:text="목"
                android:id="@+id/studyMake_btn_thu"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <Button
                android:text="금"
                android:id="@+id/studyMake_btn_fri"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <Button
                android:text="토"
                android:id="@+id/studyMake_btn_sat"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <Button
                android:text="일"
                android:id="@+id/studyMake_btn_sun"
                android:layout_width="50dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="소 개 말 : "
            android:layout_row="11"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/studyMake_edit_detail"
            android:layout_row="12"
            android:layout_column="0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 그룹 만들기"
            android:id="@+id/studyMake_button_makeStudy"
            android:layout_row="13"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"/>

    </GridLayout>

</GridLayout>